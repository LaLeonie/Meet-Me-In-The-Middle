<header>

  {{>header}}

</header>

<main>
  <form class="user-form" action="/formsubmit" method="POST">
    <div class="user-input">
      <div class="user-input-inner-wrap">
        <h2>What's your name?</h2>
        <input type="text" placeholder="John" name="userName" />
    </div>
  </div>

    <div class="user-input">
      <div class="user-input-inner-wrap">
        <h2>What's your postcode?</h2>
        <input type="text" placeholder="SW1A 1AA" name="postcode" class="user-input-postcode" />
    </div>
  </div>

    <div class="user-input">
      <div class="user-input-inner-wrap">
        <h2>What's your <br>friend's name?</h2>
        <input type="text" placeholder="Jane" name="friendName" id="friendName" />
    </div>
  </div>

    <div class="user-input">
      <div class="user-input-inner-wrap">
        <h2>What's <span class="user-input-name"></span>'s postcode?</h2>
        <input type="text" placeholder="SW1A 2AA" name="friendPostcode" class="user-input-postcode" />
    </div>
  </div>

    <div class="user-input">
      <div class="user-input-inner-wrap">
        <h2>When do you <br>want to meet?</h2>
        <input id="todaydate" type="date" name="date" />
        <input id="todaytime" type="time" name="time" />
    </div>
  </div>

    <div class="user-input">
      <h2>What do you want to do?</h2>
      <div class="radio-toolbar">
        <input id="entertainment" type="radio" placeholder="" name="venue" />
        <label for="entertainment">We want to be entertained!</label>

        <input id="restaurant" type="radio" placeholder="" name="venue" />
        <label for="restaurant">We want to enjoy a nice meal.</label>
        <input id="nightlife" type="radio" placeholder="" name="venue" />
        <label for="nightlife">We want to party!</label>
        <input id="coffee" type="radio" placeholder="" name="venue" />
        <label for="coffee">We want to have coffee.</label>
      </div>
    </div>
    <div class="button-wrap">
      <button class="button-previous">
        Go Back
      </button>
      <button class="button-next">Next Step</button>
    </div>
    <div class="step-wrap">
      <span class="step"></span>
      <span class="step"></span>
      <span class="step"></span>
      <span class="step"></span>
      <span class="step"></span>
      <span class="step"></span>
    </div>
  </form>
</main>
