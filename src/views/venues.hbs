<header>

  {{>header}}

</header>

  <h1>Pick your favourite venue</h1>

  <div class="swipe-container">
    {{#each venues}}
    <div class="venue-box">
      <div class="venue-image-container">
        <img src="{{image_url}}"/>
      </div>
      <div>{{name}}</div>
      <div class="venue-rating-stars">{{{starFinder rating}}}</div>
      <div>{{address}}</div>
      <div>{{postcode}}</div>
      <div>{{price}}</div>
      <form class="venue-form-wrap" action="">
        <input class="input-form-hidden" type="text" value="{{name}}"/>
        <input class="input-form-hidden" type="text" value="{{address}}"/>
        <input class="input-form-hidden" type="text" value="{{postcode}}"/>
      </form>
    </div>
    {{/each}}
  </div>
  <button class="standard-button venue-submit-button"> Choose this venue</button>
  <div class="step-wrap">
    <span class="step"></span>
    <span class="step"></span>
    <span class="step"></span>
    <span class="step"></span>
    <span class="step"></span>
    <span class="step"></span>
    <span class="step"></span>
  </div>
