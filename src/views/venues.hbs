<div class="main-container">
  <h1>Pick your favourite venue</h1>
  <div class="container-swipe">
    {{#each venues}}
    <div class="venue-box">
      <img src="{{image_url}}" />
      <div>{{name}}</div>
      <div>{{rating}}/5</div>
      <div>{{address}}</div>
      <div>{{price}}</div>
    </div>
    {{/each}}
  </div>
  <div class=step-wrap>
    <span class="step"></span>
    <span class="step"></span>
    <span class="step"></span>
    <span class="step"></span>
    <span class="step"></span>
    <span class="step"></span>
    <span class="step"></span>
  </div>
  <div class="heart-wrap uncolouredHeart"></div>
</div>
</div>
</div>
